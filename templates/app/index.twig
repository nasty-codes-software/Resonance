{% extends 'layouts/base.twig' %}

{% block title %}{{ app_name }}{% endblock %}
{% block body_class %}h-screen overflow-hidden{% endblock %}

{% block content %}
<!-- Mobile Sidebar Overlay -->
<div id="mobile-overlay" class="fixed inset-0 bg-black/60 z-40 hidden lg:hidden" onclick="window.app?.closeMobileSidebar()"></div>

<div class="flex h-full">
    <!-- Server Sidebar -->
    <aside id="server-sidebar" class="w-[72px] bg-resonance-bg-tertiary flex flex-col items-center py-3">
        <!-- Logo at top (click to go back to server) -->
        <button id="btn-home" class="server-icon w-12 h-12 bg-resonance-brand rounded-2xl hover:rounded-xl flex items-center justify-center font-bold text-white cursor-pointer transition-all duration-200" title="{{ app_name }}">
            <span class="material-icons">hub</span>
        </button>
        
        <!-- Separator -->
        <div class="w-8 h-0.5 bg-resonance-bg-hover rounded-full my-2"></div>
        
        <!-- Friends Button -->
        <button id="btn-friends" class="server-icon relative w-12 h-12 bg-resonance-bg-primary rounded-full hover:rounded-xl hover:bg-resonance-brand flex items-center justify-center text-resonance-text-muted hover:text-white cursor-pointer transition-all duration-200" title="Friends">
            <span class="material-icons">people</span>
            <span id="pending-requests-badge" class="absolute -top-1 -right-1 w-5 h-5 bg-resonance-danger rounded-full text-xs font-bold text-white items-center justify-center hidden">0</span>
        </button>
        
        <!-- Spacer -->
        <div class="flex-1"></div>
        
        <!-- Server Settings at bottom (Admin only) -->
        {% if 'administrator' in permissions|default([]) %}
        <button class="w-12 h-12 bg-resonance-bg-primary rounded-full hover:rounded-xl hover:bg-resonance-bg-hover flex items-center justify-center text-resonance-text-muted hover:text-white cursor-pointer transition-all duration-200" id="btn-server-settings" title="Server Settings">
            <span class="material-icons">settings</span>
        </button>
        {% endif %}
    </aside>
    
    <!-- Server View (Channels + Main Content) -->
    <div id="server-view" class="flex-1 flex min-w-0">
    
    <!-- Channel Sidebar -->
    <aside id="channel-sidebar" class="w-60 bg-resonance-bg-secondary flex flex-col">
        <!-- Server Header -->
        <div class="h-12 px-4 flex items-center border-b border-resonance-bg-tertiary shadow-sm">
            <h2 class="font-semibold text-white truncate">{{ app_name }}</h2>
            <span class="material-icons ml-auto text-resonance-text-muted">expand_more</span>
        </div>
        
        <!-- Channels Container -->
        <div class="flex-1 overflow-y-auto px-2 py-4 space-y-4" id="channels-container">
            {% for category in categories %}
            <div class="category" data-category-id="{{ category.id }}">
                <!-- Category Header -->
                <div class="category-header flex items-center px-1 py-1 cursor-pointer group hover:text-resonance-text-primary" data-category-id="{{ category.id }}">
                    <span class="text-xs font-semibold text-resonance-text-muted uppercase tracking-wide">{{ category.name }}</span>
                    <span class="material-icons text-xs mr-0.5 text-resonance-text-muted transition-transform category-arrow ms-1">expand_more</span>
                    <div class="category-actions hidden group-hover:flex gap-0.5 ms-auto">
                        <button class="rounded hover:bg-resonance-bg-hover btn-add-channel" data-category-id="{{ category.id }}" title="Create Channel">
                            <span class="material-icons text-sm text-resonance-text-muted hover:text-resonance-text-primary">add</span>
                        </button>
                        <button class="rounded hover:bg-resonance-bg-hover btn-edit-category" data-category-id="{{ category.id }}" title="Edit Category">
                            <span class="material-icons text-sm text-resonance-text-muted hover:text-resonance-text-primary">settings</span>
                        </button>
                    </div>
                </div>
                
                <!-- Text Channels -->
                <div class="category-channels space-y-0.5 mt-1">
                    {% for channel in category.text_channels %}
                    <div class="channel-item text-channel flex items-center px-2 py-1.5 rounded cursor-pointer group
                                {% if activeChannel and activeChannel.id == channel.id %}bg-resonance-bg-selected text-white{% else %}text-resonance-text-muted hover:bg-resonance-bg-hover hover:text-resonance-text-primary{% endif %}" 
                         data-channel-id="{{ channel.id }}" data-channel-type="text">
                        <span class="material-icons text-xl mr-1.5 flex-shrink-0">tag</span>
                        <span class="channel-name text-sm font-medium truncate flex-1">{{ channel.name }}</span>
                        <div class="channel-actions hidden group-hover:flex gap-0.5 flex-shrink-0">
                            <button class="p-0.5 rounded hover:bg-resonance-bg-active btn-edit-channel" data-channel-id="{{ channel.id }}" data-channel-type="text">
                                <span class="material-icons text-base text-resonance-text-muted hover:text-resonance-text-primary">settings</span>
                            </button>
                        </div>
                    </div>
                    {% endfor %}
                    
                    <!-- Voice Channels -->
                    {% for channel in category.voice_channels %}
                    <div class="voice-channel-item" data-channel-id="{{ channel.id }}">
                        <div class="voice-channel-header flex items-center px-2 py-1.5 rounded cursor-pointer group text-resonance-text-muted hover:bg-resonance-bg-hover hover:text-resonance-text-primary" data-channel-id="{{ channel.id }}">
                            <span class="material-icons text-xl mr-1.5 flex-shrink-0">volume_up</span>
                            <span class="channel-name text-sm font-medium truncate flex-1">{{ channel.name }}</span>
                            <div class="channel-actions hidden group-hover:flex gap-0.5 flex-shrink-0">
                                <button class="p-0.5 rounded hover:bg-resonance-bg-active btn-edit-channel" data-channel-id="{{ channel.id }}" data-channel-type="voice">
                                    <span class="material-icons text-base text-resonance-text-muted hover:text-resonance-text-primary">settings</span>
                                </button>
                            </div>
                        </div>
                        <ul class="voice-members pl-7 space-y-0.5" id="voice-members-{{ channel.id }}">
                            {% for member in channel.members %}
                            <li class="voice-member flex items-center gap-2 py-1 px-2 rounded text-resonance-text-secondary text-sm group" data-user-id="{{ member.user_id }}">
                                <div class="member-avatar">
                                    {% if member.avatar %}
                                    <img src="{{ member.avatar }}" class="w-6 h-6 rounded-full object-cover" alt="">
                                    {% else %}
                                    <div class="w-6 h-6 rounded-full bg-resonance-brand flex items-center justify-center text-xs font-semibold text-white">
                                        {{ member.username|slice(0,1)|upper }}
                                    </div>
                                    {% endif %}
                                </div>
                                <span class="member-name truncate flex-1">{{ member.username }}</span>
                                {% if member.muted %}
                                <span class="material-icons text-sm text-resonance-danger">mic_off</span>
                                {% endif %}
                                {% if 'move_members' in permissions|default([]) or 'administrator' in permissions|default([]) %}
                                <button class="btn-disconnect-member hidden group-hover:block p-0.5 rounded hover:bg-resonance-danger/20" data-user-id="{{ member.user_id }}" title="Disconnect">
                                    <span class="material-icons text-sm text-resonance-danger">call_end</span>
                                </button>
                                {% endif %}
                            </li>
                            {% endfor %}
                        </ul>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endfor %}
            
            <!-- Uncategorized Channels -->
            {% if uncategorized.text_channels|length > 0 or uncategorized.voice_channels|length > 0 %}
            <div class="category" data-category-id="0">
                <div class="category-header flex items-center px-1 py-1 cursor-pointer group">
                    <span class="material-icons text-xs mr-0.5 text-resonance-text-muted">expand_more</span>
                    <span class="text-xs font-semibold text-resonance-text-muted uppercase tracking-wide">Channels</span>
                </div>
                <div class="category-channels space-y-0.5 mt-1">
                    {% for channel in uncategorized.text_channels %}
                    <div class="channel-item text-channel flex items-center px-2 py-1.5 rounded cursor-pointer text-resonance-text-muted hover:bg-resonance-bg-hover hover:text-resonance-text-primary
                                {% if activeChannel and activeChannel.id == channel.id %}bg-resonance-bg-selected text-white{% endif %}" 
                         data-channel-id="{{ channel.id }}" data-channel-type="text">
                        <span class="material-icons text-xl mr-1.5">tag</span>
                        <span class="text-sm font-medium truncate">{{ channel.name }}</span>
                    </div>
                    {% endfor %}
                    {% for channel in uncategorized.voice_channels %}
                    <div class="voice-channel-item" data-channel-id="{{ channel.id }}">
                        <div class="voice-channel-header flex items-center px-2 py-1.5 rounded cursor-pointer text-resonance-text-muted hover:bg-resonance-bg-hover hover:text-resonance-text-primary" data-channel-id="{{ channel.id }}">
                            <span class="material-icons text-xl mr-1.5">volume_up</span>
                            <span class="text-sm font-medium truncate">{{ channel.name }}</span>
                        </div>
                        <ul class="voice-members pl-7" id="voice-members-{{ channel.id }}"></ul>
                    </div>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
        </div>
        
        <!-- Add Category Button -->
        <div class="px-2 py-2">
            <button class="w-full py-2 text-sm text-resonance-text-muted hover:text-resonance-text-primary hover:bg-resonance-bg-hover rounded transition-colors flex items-center justify-center gap-1" id="btn-add-category">
                <span class="material-icons text-lg">add</span>
                <span>Add Category</span>
            </button>
        </div>
        
        <!-- Voice Connection Panel -->
        <div class="voice-connection-panel bg-resonance-bg-tertiary border-t border-black/20 px-2 py-2 hidden" id="voice-connection-panel">
            <div class="flex items-center justify-between">
                <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-1.5">
                        <span class="w-2 h-2 bg-resonance-success rounded-full animate-pulse"></span>
                        <span class="text-xs font-semibold text-resonance-success">Voice Connected</span>
                    </div>
                    <span class="text-xs text-resonance-text-muted truncate block" id="connected-voice-channel"></span>
                </div>
                <button class="w-8 h-8 bg-resonance-danger/20 hover:bg-resonance-danger rounded flex items-center justify-center text-resonance-danger hover:text-white transition-colors" id="btn-disconnect-voice" title="Disconnect">
                    <span class="material-icons text-lg">call_end</span>
                </button>
            </div>
        </div>
        
        <!-- User Panel -->
        <div class="user-panel bg-resonance-bg-tertiary/50 px-2 py-2 flex items-center gap-2" id="user-panel">
            <div class="user-info flex items-center gap-2 flex-1 min-w-0 cursor-pointer" id="user-info-panel">
                <div class="user-avatar">
                    {% if userProfile and userProfile.avatar %}
                    <img src="{{ userProfile.avatar }}" alt="Avatar" class="w-8 h-8 rounded-full object-cover">
                    {% else %}
                    <div class="w-7 h-7 rounded-full bg-resonance-brand flex items-center justify-center text-sm font-semibold text-white">
                        {{ auth().username|slice(0,1)|upper }}
                    </div>
                    {% endif %}
                </div>
                <div class="flex flex-col min-w-0">
                    <span class="text-sm font-semibold text-white truncate">
                        {{ userProfile.display_name|default(auth().username) }}
                    </span>
                    <span class="text-xs text-resonance-text-secondary truncate">
                        {% if userProfile and userProfile.custom_status %}
                            {{ userProfile.custom_status }}
                        {% else %}
                            Online
                        {% endif %}
                    </span>
                </div>
            </div>
            <div class="user-controls flex gap-0.5">
                <button class="w-8 h-8 rounded hover:bg-resonance-bg-hover flex items-center justify-center text-resonance-text-muted hover:text-resonance-text-primary transition-colors" id="btn-mute" title="Mute">
                    <span class="material-icons text-xl">mic</span>
                </button>
                <button class="w-8 h-8 rounded hover:bg-resonance-bg-hover flex items-center justify-center text-resonance-text-muted hover:text-resonance-text-primary transition-colors" id="btn-deafen" title="Deafen">
                    <span class="material-icons text-xl">headphones</span>
                </button>
                <button class="w-8 h-8 rounded hover:bg-resonance-bg-hover flex items-center justify-center text-resonance-text-muted hover:text-resonance-text-primary transition-colors" id="btn-settings" title="Settings">
                    <span class="material-icons text-xl">settings</span>
                </button>
            </div>
        </div>
    </aside>
    
    <!-- Main Content -->
    <main class="flex-1 flex flex-col bg-resonance-bg-primary min-w-0">
        <!-- Channel Header -->
        <header class="h-12 px-4 flex items-center border-b border-resonance-bg-tertiary shadow-sm gap-2" id="channel-header">
            <!-- Mobile Menu Button -->
            <button id="btn-mobile-menu" class="lg:hidden p-1 -ml-1 mr-1 rounded hover:bg-resonance-bg-hover text-resonance-text-muted hover:text-white flex-shrink-0" title="Menu">
                <span class="material-icons">menu</span>
            </button>
            <span class="material-icons text-2xl text-resonance-text-muted hidden sm:inline" id="channel-header-icon">tag</span>
            <span class="font-semibold text-white" id="current-channel-name">
                {{ activeChannel ? activeChannel.name : 'Select a channel' }}
            </span>
            <span class="text-sm text-resonance-text-secondary truncate hidden" id="channel-description">
                {% if activeChannel and activeChannel.description %}{{ activeChannel.description }}{% endif %}
            </span>
            
            <!-- Channel Header Actions -->
            <div class="ml-auto flex items-center gap-1" id="channel-header-actions">
                <button class="p-1.5 rounded hover:bg-resonance-bg-hover text-resonance-text-muted hover:text-resonance-text-primary transition-colors" id="btn-pinned-messages" title="Pinned Messages">
                    <span class="material-icons">push_pin</span>
                </button>
                <button class="p-1.5 rounded hover:bg-resonance-bg-hover text-resonance-text-muted hover:text-resonance-text-primary transition-colors hidden sm:flex" id="btn-toggle-members" title="Show/Hide Members">
                    <span class="material-icons">people</span>
                </button>
                <div class="relative ml-2 hidden sm:block">
                    <input type="text" id="channel-search-input" placeholder="Search" 
                           class="w-36 px-3 py-1 text-sm bg-resonance-bg-tertiary rounded text-resonance-text-primary placeholder-resonance-text-muted focus:outline-none focus:w-56 transition-all">
                    <span class="material-icons absolute right-2 top-1/2 -translate-y-1/2 text-base text-resonance-text-muted pointer-events-none">search</span>
                </div>
            </div>
        </header>
        
        <!-- Text Channel View -->
        <div id="text-channel-view" class="flex-1 flex flex-col min-h-0">
            <!-- Messages Area -->
            <div class="flex-1 overflow-y-auto" id="messages-container">
                <div id="messages-list">
                    {% for message in messages %}
                    {% set isOwnMessage = message.user_id == auth().id %}
                    {% set canManageMessages = 'manage_messages' in permissions|default([]) %}
                    {% set isAdmin = 'administrator' in permissions|default([]) %}
                    {% set canEdit = isOwnMessage %}
                    {% set canDelete = isOwnMessage or canManageMessages or isAdmin %}
                    {% set canPin = canManageMessages or isAdmin %}
                    <div class="message flex gap-2 sm:gap-4 p-2 sm:p-4 hover:bg-resonance-bg-secondary rounded transition-colors group relative" data-message-id="{{ message.id }}" data-user-id="{{ message.user_id }}">
                        <div class="message-avatar flex-shrink-0">
                            {% if message.avatar %}
                            <img src="{{ message.avatar }}" class="w-8 h-8 sm:w-10 sm:h-10 rounded-full object-cover cursor-pointer user-clickable" data-user-id="{{ message.user_id }}" alt="">
                            {% else %}
                            <div class="w-8 h-8 sm:w-10 sm:h-10 rounded-full bg-resonance-brand flex items-center justify-center text-white font-semibold cursor-pointer user-clickable" data-user-id="{{ message.user_id }}">{{ message.username|slice(0,1)|upper }}</div>
                            {% endif %}
                        </div>
                        <div class="message-content flex-1 min-w-0">
                            <div class="message-header flex items-center gap-2 mb-1">
                                <span class="message-author font-medium text-white hover:underline cursor-pointer user-clickable" data-user-id="{{ message.user_id }}">{{ message.username }}</span>
                                <span class="message-timestamp text-xs text-resonance-text-muted">{{ message.created_at }}</span>
                                {% if message.edited %}<span class="text-xs text-resonance-text-muted">(edited)</span>{% endif %}
                                {% if message.pinned %}<span class="material-icons text-xs text-yellow-500 ml-1" title="Pinned">push_pin</span>{% endif %}
                            </div>
                            <div class="message-text text-resonance-text-primary break-words">{{ message.content }}</div>
                            {% if message.attachment_url %}
                            <div class="message-attachment mt-2">
                                {% if message.attachment_type == 'image' %}
                                <a href="{{ message.attachment_url }}" target="_blank" class="block">
                                    <img src="{{ message.attachment_url }}" alt="{{ message.attachment_name|default('Image') }}" class="max-w-full sm:max-w-md max-h-60 sm:max-h-80 rounded-lg border border-resonance-bg-tertiary hover:border-resonance-brand transition-colors cursor-pointer">
                                </a>
                                {% else %}
                                <a href="{{ message.attachment_url }}" download="{{ message.attachment_name|default('file') }}" class="inline-flex items-center gap-2 px-3 py-2 bg-resonance-bg-tertiary rounded-lg border border-resonance-bg-modifier hover:bg-resonance-bg-modifier transition-colors">
                                    <span class="material-icons text-resonance-text-muted">attach_file</span>
                                    <span class="text-resonance-text-primary">{{ message.attachment_name|default('Download file') }}</span>
                                </a>
                                {% endif %}
                            </div>
                            {% endif %}
                        </div>
                        {% if canPin or canEdit or canDelete %}
                        <div class="message-actions absolute right-2 top-2 hidden group-hover:flex bg-resonance-bg-tertiary rounded shadow-lg border border-resonance-bg-hover">
                            {% if canPin %}
                            <button class="btn-pin-message p-1.5 hover:bg-resonance-bg-hover rounded-l transition-colors" title="{{ message.pinned ? 'Unpin' : 'Pin' }}">
                                <span class="material-icons text-sm text-resonance-text-muted hover:text-yellow-500">push_pin</span>
                            </button>
                            {% endif %}
                            {% if canEdit %}
                            <button class="btn-edit-message p-1.5 hover:bg-resonance-bg-hover transition-colors" title="Edit">
                                <span class="material-icons text-sm text-resonance-text-muted hover:text-resonance-brand">edit</span>
                            </button>
                            {% endif %}
                            {% if canDelete %}
                            <button class="btn-delete-message p-1.5 hover:bg-resonance-bg-hover rounded-r transition-colors" title="Delete">
                                <span class="material-icons text-sm text-resonance-text-muted hover:text-resonance-danger">delete</span>
                            </button>
                            {% endif %}
                        </div>
                        {% endif %}
                    </div>
                    {% else %}
                    <div class="flex flex-col items-center justify-center h-full text-resonance-text-muted" id="no-messages">
                        <span class="material-icons text-6xl mb-4">chat_bubble_outline</span>
                        <p>No messages yet. Be the first to send one!</p>
                    </div>
                    {% endfor %}
                </div>
            </div>
            
            <!-- Typing Indicator -->
            <div class="typing-indicator px-4 py-1 text-xs text-resonance-text-secondary hidden" id="typing-indicator">
                <span class="inline-flex gap-0.5 mr-1">
                    <span class="typing-dot w-1.5 h-1.5 bg-resonance-text-secondary rounded-full"></span>
                    <span class="typing-dot w-1.5 h-1.5 bg-resonance-text-secondary rounded-full"></span>
                    <span class="typing-dot w-1.5 h-1.5 bg-resonance-text-secondary rounded-full"></span>
                </span>
                <span id="typing-text">Someone is typing</span>
            </div>
            
            <!-- Message Input -->
            <div class="px-4 pb-6" id="message-input-container">
                <form id="message-form">
                    <input type="hidden" id="current-channel-id" value="{{ activeChannel ? activeChannel.id : '' }}">
                    <div class="flex items-center bg-resonance-input rounded-lg">
                        <button type="button" class="p-3 text-resonance-text-muted hover:text-resonance-text-primary transition-colors" id="btn-attach-file" title="Attach File">
                            <span class="material-icons">add_circle</span>
                        </button>
                        <input type="file" id="file-input" class="hidden" accept="image/*,.pdf,.txt,.zip">
                        <input 
                            type="text" 
                            id="message-input" 
                            placeholder="Message #{{ activeChannel ? activeChannel.name : 'channel' }}"
                            autocomplete="off"
                            maxlength="2000"
                            class="flex-1 bg-transparent py-3 text-resonance-text-primary placeholder-resonance-text-muted focus:outline-none"
                        >
                        <button type="button" class="p-3 text-resonance-text-muted hover:text-resonance-text-primary transition-colors" id="btn-emoji-picker" title="Emoji">
                            <span class="material-icons">emoji_emotions</span>
                        </button>
                    </div>
                </form>
                
                <!-- Emoji Picker Popup -->
                <div id="emoji-picker" class="absolute bottom-20 right-8 bg-resonance-bg-secondary rounded-lg shadow-xl p-3 hidden z-50">
                    <div class="grid grid-cols-8 gap-1 max-h-48 overflow-y-auto">
                        {% set emojis = ['ğŸ˜€', 'ğŸ˜ƒ', 'ğŸ˜„', 'ğŸ˜', 'ğŸ˜…', 'ğŸ˜‚', 'ğŸ¤£', 'ğŸ˜Š', 'ğŸ˜‡', 'ğŸ™‚', 'ğŸ™ƒ', 'ğŸ˜‰', 'ğŸ˜Œ', 'ğŸ˜', 'ğŸ¥°', 'ğŸ˜˜', 'ğŸ˜—', 'ğŸ˜™', 'ğŸ˜š', 'ğŸ˜‹', 'ğŸ˜›', 'ğŸ˜œ', 'ğŸ¤ª', 'ğŸ˜', 'ğŸ¤‘', 'ğŸ¤—', 'ğŸ¤­', 'ğŸ¤«', 'ğŸ¤”', 'ğŸ¤', 'ğŸ¤¨', 'ğŸ˜', 'ğŸ˜‘', 'ğŸ˜¶', 'ğŸ˜', 'ğŸ˜’', 'ğŸ™„', 'ğŸ˜¬', 'ğŸ¤¥', 'ğŸ˜Œ', 'ğŸ˜”', 'ğŸ˜ª', 'ğŸ¤¤', 'ğŸ˜´', 'ğŸ˜·', 'ğŸ¤’', 'ğŸ¤•', 'ğŸ¤¢', 'ğŸ¤®', 'ğŸ¤§', 'ğŸ¥µ', 'ğŸ¥¶', 'ğŸ¥´', 'ğŸ˜µ', 'ğŸ¤¯', 'ğŸ¤ ', 'ğŸ¥³', 'ğŸ˜', 'ğŸ¤“', 'ğŸ§', 'ğŸ‘', 'ğŸ‘', 'ğŸ‘Œ', 'âœŒï¸', 'ğŸ¤', 'ğŸ¤Ÿ', 'ğŸ¤˜', 'ğŸ¤™', 'ğŸ‘‹', 'ğŸ–ï¸', 'âœ‹', 'ğŸ––', 'ğŸ‘', 'ğŸ™Œ', 'ğŸ‘', 'ğŸ¤²', 'ğŸ¤', 'ğŸ™', 'â¤ï¸', 'ğŸ§¡', 'ğŸ’›', 'ğŸ’š', 'ğŸ’™', 'ğŸ’œ', 'ğŸ–¤', 'ğŸ’”', 'ğŸ’•', 'ğŸ’', 'ğŸ’“', 'ğŸ’—', 'ğŸ’–', 'ğŸ’˜', 'ğŸ’', 'ğŸ”¥', 'â­', 'âœ¨', 'ğŸ’¯', 'ğŸ’¢', 'ğŸ’¥', 'ğŸ’«', 'ğŸ’¦', 'ğŸ’¨', 'ğŸ‰', 'ğŸŠ'] %}
                        {% for emoji in emojis %}
                        <button type="button" class="emoji-btn w-8 h-8 flex items-center justify-center text-xl hover:bg-resonance-bg-hover rounded transition-colors" data-emoji="{{ emoji }}">{{ emoji }}</button>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Voice Channel View (Discord-style) -->
        <div id="voice-channel-view" class="flex-1 flex flex-col hidden">
            <!-- Spotlight View (for focused user) -->
            <div id="voice-spotlight" class="hidden absolute inset-0 z-40 bg-resonance-bg-primary flex flex-col">
                <div class="flex-1 flex items-center justify-center p-4">
                    <div id="spotlight-content" class="relative w-full h-full max-w-5xl max-h-[80vh] rounded-xl overflow-hidden bg-resonance-bg-tertiary">
                        <!-- Spotlight video/avatar will be inserted here -->
                    </div>
