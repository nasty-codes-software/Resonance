{% extends 'layouts/base.twig' %}

{% block title %}Register - {{ app_name }}{% endblock %}
{% block body_class %}min-h-screen flex items-center justify-center bg-gradient-to-br from-resonance-brand to-purple-600{% endblock %}

{% block content %}
<div class="w-full max-w-md px-4">
    <div class="bg-resonance-bg-primary rounded-lg shadow-2xl p-8">
        <div class="text-center mb-8">
            <div class="w-16 h-16 bg-resonance-brand rounded-2xl flex items-center justify-center mx-auto mb-4">
                <span class="material-icons text-3xl text-white">hub</span>
            </div>
            <h1 class="text-2xl font-bold text-white">{{ app_name }}</h1>
            <p class="text-resonance-text-secondary mt-1">Create your account</p>
        </div>
        
        <form action="/register" method="POST" class="space-y-4">
            {{ csrf_field()|raw }}
            
            <div>
                <label for="username" class="block text-xs font-semibold text-resonance-text-secondary uppercase mb-2">Username</label>
                <input 
                    type="text" 
                    id="username" 
                    name="username" 
                    value="{{ old('username') }}"
                    placeholder="Choose a username"
                    pattern="[a-zA-Z0-9_]+"
                    minlength="3"
                    maxlength="50"
                    required
                    autofocus
                    class="w-full px-3 py-2.5 bg-resonance-input rounded text-resonance-text-primary placeholder-resonance-text-muted focus:outline-none focus:ring-2 focus:ring-resonance-brand"
                >
                <p class="text-xs text-resonance-text-muted mt-1">Letters, numbers, and underscores only</p>
            </div>
            
            <div>
                <label for="email" class="block text-xs font-semibold text-resonance-text-secondary uppercase mb-2">Email</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    value="{{ old('email') }}"
                    placeholder="Enter your email"
                    required
                    class="w-full px-3 py-2.5 bg-resonance-input rounded text-resonance-text-primary placeholder-resonance-text-muted focus:outline-none focus:ring-2 focus:ring-resonance-brand"
                >
            </div>
            
            <div>
                <label for="password" class="block text-xs font-semibold text-resonance-text-secondary uppercase mb-2">Password</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    placeholder="Create a password"
                    minlength="8"
                    required
                    class="w-full px-3 py-2.5 bg-resonance-input rounded text-resonance-text-primary placeholder-resonance-text-muted focus:outline-none focus:ring-2 focus:ring-resonance-brand"
                >
                <p class="text-xs text-resonance-text-muted mt-1">At least 8 characters</p>
            </div>
            
            <div>
                <label for="password_confirm" class="block text-xs font-semibold text-resonance-text-secondary uppercase mb-2">Confirm Password</label>
                <input 
                    type="password" 
                    id="password_confirm" 
                    name="password_confirm" 
                    placeholder="Confirm your password"
                    required
                    class="w-full px-3 py-2.5 bg-resonance-input rounded text-resonance-text-primary placeholder-resonance-text-muted focus:outline-none focus:ring-2 focus:ring-resonance-brand"
                >
            </div>
            
            <div>
                <label for="invite_code" class="block text-xs font-semibold text-resonance-text-secondary uppercase mb-2">Invite Code</label>
                <input 
                    type="text" 
                    id="invite_code" 
                    name="invite_code" 
                    value="{{ old('invite_code') }}"
                    placeholder="Enter your invite code"
                    pattern="[A-Za-z0-9]+"
                    minlength="8"
                    maxlength="20"
                    required
                    autocomplete="off"
                    style="text-transform: uppercase"
                    class="w-full px-3 py-2.5 bg-resonance-input rounded text-resonance-text-primary placeholder-resonance-text-muted focus:outline-none focus:ring-2 focus:ring-resonance-brand tracking-widest font-mono"
                >
                <p class="text-xs text-resonance-text-muted mt-1">Ask an admin for an invite code</p>
            </div>
            
            <button type="submit" class="w-full py-2.5 bg-resonance-brand hover:bg-resonance-brand-hover text-white font-medium rounded transition-colors mt-6">
                Create Account
            </button>
        </form>
        
        <div class="mt-6 text-center text-sm text-resonance-text-muted">
            <p>Already have an account? <a href="/login" class="text-resonance-text-link hover:underline">Log In</a></p>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
{{ parent() }}
<script src="{{ asset('js/auth.js') }}"></script>
{% endblock %}
