{% extends 'layouts/base.twig' %}

{% block title %}Login - {{ app_name }}{% endblock %}
{% block body_class %}min-h-screen flex items-center justify-center bg-gradient-to-br from-resonance-brand to-purple-600{% endblock %}

{% block content %}
<div class="w-full max-w-md px-4">
    <div class="bg-resonance-bg-primary rounded-lg shadow-2xl p-8">
        <div class="text-center mb-8">
            <div class="w-16 h-16 bg-resonance-brand rounded-2xl flex items-center justify-center mx-auto mb-4">
                <span class="material-icons text-3xl text-white">hub</span>
            </div>
            <h1 class="text-2xl font-bold text-white">{{ app_name }}</h1>
            <p class="text-resonance-text-secondary mt-1">Welcome back!</p>
        </div>
        
        <form action="/login" method="POST" class="space-y-4">
            {{ csrf_field()|raw }}
            
            <div>
                <label for="email" class="block text-xs font-semibold text-resonance-text-secondary uppercase mb-2">Email</label>
                <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    value="{{ old('email') }}"
                    placeholder="Enter your email"
                    required
                    autofocus
                    class="w-full px-3 py-2.5 bg-resonance-input rounded text-resonance-text-primary placeholder-resonance-text-muted focus:outline-none focus:ring-2 focus:ring-resonance-brand"
                >
            </div>
            
            <div>
                <label for="password" class="block text-xs font-semibold text-resonance-text-secondary uppercase mb-2">Password</label>
                <input 
                    type="password" 
                    id="password" 
                    name="password" 
                    placeholder="Enter your password"
                    required
                    class="w-full px-3 py-2.5 bg-resonance-input rounded text-resonance-text-primary placeholder-resonance-text-muted focus:outline-none focus:ring-2 focus:ring-resonance-brand"
                >
            </div>
            
            <button type="submit" class="w-full py-2.5 bg-resonance-brand hover:bg-resonance-brand-hover text-white font-medium justify-center rounded transition-colors mt-6">
                Log In
            </button>
        </form>
        
        <div class="mt-6 text-center text-sm text-resonance-text-muted">
            <p>Need an account? <a href="/register" class="text-resonance-text-link hover:underline">Register</a></p>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
{{ parent() }}
{% endblock %}
